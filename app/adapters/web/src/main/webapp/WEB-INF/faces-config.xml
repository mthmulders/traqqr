<?xml version='1.0' encoding='UTF-8'?>
<faces-config
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="https://jakarta.ee/xml/ns/jakartaee"
        xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-facesconfig_4_0.xsd"
        version="4.0">
    <name>traqqr</name>

    <application>
        <action-listener>org.primefaces.application.DialogActionListener</action-listener>
        <el-resolver>org.primefaces.application.exceptionhandler.PrimeExceptionHandlerELResolver</el-resolver>
        <navigation-handler>org.primefaces.application.DialogNavigationHandler</navigation-handler>
        <resource-bundle>
            <base-name>it.mulders.traqqr.web.messages</base-name>
            <var>msgs</var>
        </resource-bundle>
        <view-handler>org.primefaces.application.DialogViewHandler</view-handler>
    </application>

    <factory>
        <exception-handler-factory>org.primefaces.application.exceptionhandler.PrimeExceptionHandlerFactory</exception-handler-factory>
    </factory>
    
    <navigation-rule>
        <from-view-id>/secure/measurements/index.xhtml</from-view-id>

        <navigation-case>
            <from-outcome>add-manual-measurement</from-outcome>
            <to-view-id>/secure/measurements/add/index.xhtml</to-view-id>
            <redirect>
                <redirect-param>
                    <name>vehicleCode</name>
                    <value>#{manageMeasurementsView.selectedVehicle.code}</value>
                </redirect-param>
            </redirect>
        </navigation-case>
    </navigation-rule>

    <navigation-rule>
        <from-view-id>/secure/measurements/add/index.xhtml</from-view-id>

        <navigation-case>
            <from-outcome>return-measurement-list</from-outcome>
            <to-view-id>/secure/measurements/index.xhtml</to-view-id>
            <redirect>
                <redirect-param>
                    <name>vehicleCode</name>
                    <value>#{addMeasurementView.preselectedVehicleCode}</value>
                </redirect-param>
            </redirect>
        </navigation-case>
    </navigation-rule>

    <navigation-rule>
        <from-view-id>/secure/batch/index.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>show-batch-job</from-outcome>
            <to-view-id>/secure/batch/show/index.xhtml</to-view-id>
            <redirect>
                <redirect-param>
                    <name>batchJob</name>
                    <value>#{showBatchJobView.batchJob}</value>
                </redirect-param>
            </redirect>
        </navigation-case>
    </navigation-rule>
</faces-config>